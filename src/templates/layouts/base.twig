<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/css/builded.css">
    <title>{% block title %}-{% endblock %} | Expenergie</title>
</head>
<body class="bg-platinum-base">
<header class="bg-platinum-base shadow-lg h-24 hidden md:flex">
    <a href="" class="border flex-shrink-0 flex items-center justify-center px-4 lg:px-6 xl:px-8">
        <img src="" alt=""/>
    </a>
    <nav class="header-links contents font-semibold text-base lg:text-lg">
        <ul class="flex items-center ml-4 xl:ml-8 mr-auto">
            <li class="p-3 xl:p-6 hover:scale-105 transition-all ease-in-out">
                <a href="/" id="home-link">
                    <span class="text-xl font-serif">Accueil</span>
                </a>
            </li>
            <li class="p-3 xl:p-6 hover:scale-105 transition-all ease-in-out">
                <a href="/offres" id="services-link">
                    <span class="text-xl font-serif">Offres</span>
                </a>
            </li>
            <li class="p-3 xl:p-6 hover:scale-105 transition-all ease-in-out">
                <a href="/installations" id="installations-link">
                    <span class="text-xl font-serif">Installations</span>
                </a>
            </li>
            <li class="p-3 xl:p-6 hover:scale-105 transition-all ease-in-out">
                <a href="/about" id="about-link">
                    <span class="text-xl font-serif">À propos</span>
                </a>
            </li>
            <li class="p-3 xl:p-6 hover:scale-105 transition-all ease-in-out">
                <a href="/contact" id="contact-link">
                    <span class="text-xl font-serif">Contact</span>
                </a>
            </li>
        </ul>
    </nav>
    <nav class="hidden xl:contents">
        <ul class="flex items-center mr-4 lg:mr-6 xl:mr-8">
            <li class="p-1">
                <a href="mailto:sebastien.desessard@expenergie.fr" class="inline-block rounded-full border p-2 hover:shadow-lg hover:border-opacity-0 duration-200 hover:-translate-y-0.5 hover:text-blue-techno-base">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22px" height="22px" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="1.75"><path d="M22 12c0 3.771 0 5.657-1.172 6.828S17.771 20 14 20h-4c-3.771 0-5.657 0-6.828-1.172S2 15.771 2 12s0-5.657 1.172-6.828S6.229 4 10 4h4c3.771 0 5.657 0 6.828 1.172c.654.653.943 1.528 1.07 2.828"/><path d="m18 8l-2.159 1.8c-1.836 1.53-2.755 2.295-3.841 2.295c-.65 0-1.239-.274-2-.82M6 8l.9.75l.9.75"/></g></svg>
                </a>
            </li>
            <li class="p-1">
                <a href="https://www.facebook.com/expenergie/" target="_blank" class="inline-block rounded-full border p-2 hover:shadow-lg hover:border-opacity-0 duration-200 hover:-translate-y-0.5 hover:text-blue-techno-base">
                    <svg class="h-4 svg-inline--fa fa-facebook-f fa-w-10 fa-7x" aria-hidden="true" focusable="false" data-prefix="fab" data-icon="facebook-f" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                        <path fill="currentColor" d="M279.14 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z"></path>
                    </svg>
                </a>
            </li>
            <li class="p-1">
                <a href="" target="_blank" class="inline-block rounded-full border p-2 hover:shadow-lg hover:border-opacity-0 duration-200 hover:-translate-y-0.5 hover:text-blue-techno-base">
                    <svg class="h-4 svg-inline--fa fa-linkedin-in fa-w-14 fa-9x" aria-hidden="true" focusable="false" data-prefix="fab" data-icon="linkedin-in" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                        <path fill="currentColor" d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"></path>
                    </svg>
                </a>
            </li>
        </ul>
    </nav>
</header>


<div class="flex flex-col min-h-screen">
    <div class="flex-grow p-10">
        {% block content %}{% endblock %}
    </div>
    <footer class="flex justify-center p-6 font-serif">
        © 2024 Expenergie - Tous droits réservés
    </footer>
</div>

<script language="JavaScript">
// Récupérer le chemin de l'URL
const path = window.location.pathname;
console.log(path);

// Ajouter la classe active à l'élément correspondant
if (path === '/') {
    document.getElementById('home-link').parentElement.classList.add('active');
    document.getElementById('home-link').parentElement.classList.remove('hover:scale-105');
} else if (path === '/services') {
    document.getElementById('services-link').parentElement.classList.add('active');
    document.getElementById('services-link').parentElement.classList.remove('hover:scale-105');
} else if (path === '/installations') {
    document.getElementById('installations-link').parentElement.classList.add('active');
    document.getElementById('installations-link').parentElement.classList.remove('hover:scale-105');
} else if (path === '/about') {
    document.getElementById('about-link').parentElement.classList.add('active');
    document.getElementById('about-link').parentElement.classList.remove('hover:scale-105');
} else if (path === '/contact') {
    document.getElementById('contact-link').parentElement.classList.add('active');
    document.getElementById('contact-link').parentElement.classList.remove('hover:scale-105');
}
</script>
{% block scripts %}{% endblock %}
</body>
</html>